<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<HBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="50.0" prefWidth="800.0"
      xmlns="http://javafx.com/javafx/8.0.171" fx:controller="com.canyue.mqtt.ui.controller.ConnController">
    <stylesheets>
        <URL value="@/css/tooltip.css"/>
    </stylesheets>
    <children>
        <Label prefHeight="30.0" prefWidth="58.0" text="服务器:"/>
        <TextField fx:id="tfSocket" alignment="CENTER" editable="false" focusTraversable="false"
                   nodeOrientation="RIGHT_TO_LEFT"
                   prefHeight="30.0" prefWidth="150.0" text="127.0.0.1:1883">
            <font>
                <Font name="System Bold" size="15.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="DEFAULT"/>
            </cursor>
        </TextField>
        <Button fx:id="btnConnect" mnemonicParsing="false" onAction="#connect">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20">
                    <Image url="@/img/conn_icon.png"/>
                </ImageView>
            </graphic>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Button fx:id="btnDisconnect" disable="true" mnemonicParsing="false" onAction="#disconnect">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20">
                    <Image url="@/img/dconn_icon.png"/>
                </ImageView>
            </graphic>
            <HBox.margin>
                <Insets left="10.0"/>
            </HBox.margin>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </children>
        <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
        </padding>
</HBox>

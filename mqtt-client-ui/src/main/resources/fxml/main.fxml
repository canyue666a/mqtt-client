<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="borderPane" prefHeight="730" prefWidth="1100.0"
            xmlns="http://javafx.com/javafx/8.0.171" fx:controller="com.canyue.mqtt.ui.controller.MainController">
    <fx:define>
        <ImageView fitWidth="800" fitHeight="700" fx:id="iv_bg">
            <Image url="@/img/iv_bg.png"/>
        </ImageView>
    </fx:define>
    <top>
        <HBox BorderPane.alignment="CENTER" prefHeight="30">
            <Button onAction="#create" text="New"/>
            <Button text="settings"/>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </HBox>
    </top>
    <left>
        <VBox style="-fx-background-color:#dddddd">
            <ListView fx:id="lvClient" prefHeight="700" prefWidth="300.0" BorderPane.alignment="CENTER">
            </ListView>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </VBox>
    </left>
    <center>
        <fx:reference source="iv_bg"/>
    </center>
</BorderPane>
